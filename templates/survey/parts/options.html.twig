<ul>
    {% if question.isSingle %}
        {% for option in question.options %}
            <li>
                <input type="radio" id="option-{{ option.id }}" name="question-{{ question.id }}"
                       value="{{ option.value }}">
                <label for="option-{{ option.id }}">{{ option.content }}</label>
            </li>
        {% endfor %}
    {% else %}
        {% for option in question.options %}
            <li>
                <input type="checkbox" id="option-{{ option.id }}" name="question-{{ question.id }}"
                       value="{{ option.value }}">
                <label for="option-{{ option.id }}">{{ option.content }}</label>
            </li>
        {% endfor %}
    {% endif %}
</ul>